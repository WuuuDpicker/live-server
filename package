<body>
    <div class="calc">
        <input id="display" type="text" value="0" readonly>


        <table class="buttons">
            <tr>
                <td colspan="2"><button class="op" onclick="clearDisplay()">C</button></td>
                <td><button class="op" onclick="deleteLastChar()">⌫</button></td>
                <td><button class="op" onclick="addOperator('/')">/</button></td>
            </tr>


            <tr>
                <td><button class="num" onclick="addNumber('7')">7</button></td>
                <td><button class="num" onclick="addNumber('8')">8</button></td>
                <td><button class="num" onclick="addNumber('9')">9</button></td>
                <td><button class="op" onclick="addOperator('*')">×</button></td>
            </tr>


            <tr>
                <td><button class="num" onclick="addNumber('4')">4</button></td>
                <td><button class="num" onclick="addNumber('5')">5</button></td>
                <td><button class="num" onclick="addNumber('6')">6</button></td>
                <td><button class="op" onclick="addOperator('-')">-</button></td>
            </tr>


            <tr>
                <td><button class="num" onclick="addNumber('1')">1</button></td>
                <td><button class="num" onclick="addNumber('2')">2</button></td>
                <td><button class="num" onclick="addNumber('3')">3</button></td>
                <td><button class="op" onclick="addOperator('+')">+</button></td>
            </tr>


            <tr>
                <td colspan="2"><button class="num" onclick="addNumber('0')">0</button></td>
                <td><button class="num" onclick="addNumber('.')">.</button></td>
                <td><button class="eq" onclick="calculate()">=</button></td>
            </tr>
        </table>
    </div>


    <script>
        let display = document.getElementById('display');
        let currentValue = '';


        function addNumber(num) {
            let lastNumber = currentValue.split(/[+\-*\/]/).pop();
            if (num == '.' && lastNumber.includes('.')) return;
            if (currentValue == 'Ошибка' || currentValue == '0' && num != '.') currentValue = num;
            else currentValue += num;
            display.value = currentValue;
        }


        function addOperator(operator) {
            if (!currentValue || currentValue == 'Ошибка') return;
            currentValue += operator;
            display.value = currentValue;
        }


        function deleteLastChar() {
            if (currentValue.length > 1) currentValue = currentValue.slice(0, -1);
            else currentValue = '0';
            display.value = currentValue;
        }


        function clearDisplay() {
            currentValue = '';
            display.value = '0';
        }


        function calculate() {
            if (!currentValue || currentValue == 'Ошибка') return;
            try {
                currentValue = String(eval(
                    currentValue.replace(/×/g, '*').replace(/÷/g, '/')
                ));
                display.value = currentValue;
            } catch (error) {
                display.value = 'Ошибка';
                currentValue = 'Ошибка';
                setTimeout(function() { clearDisplay(); }, 2500);
            }
        }
    </script>
</body>


